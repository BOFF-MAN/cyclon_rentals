<div class="navbar navbar-expand-sm navbar-light navbar-cyclon px-3 fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <%= link_to root_path do %>
    <%= image_tag "logo_180px.png", alt: "logo", class: "logo" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <li class="nav-item active">
        <%= link_to "Book a bike", bikes_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item active">
      <%# <% if policy(Bike).create? %>
        <%= link_to "List your bike", new_bike_path, class: "nav-link" %>
      <%# <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to "Bookings", bookings_path, class: "nav-link" %>
      </li>
    </ul>
    <div class="nav-item dropdown">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar,  class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
        <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>

        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/">Home</a>
          <a class="dropdown-item" href="bikes">Book a Bike</a>
          <a class="dropdown-item" href="bikes/new">List your bike</a>
          <a class="dropdown-item" href="bookings">Bookings</a>
          <%= link_to "Account", current_user, class: "dropdown-item" %>
            <% if current_user %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
            <% end %>
            <% else %>
            <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
