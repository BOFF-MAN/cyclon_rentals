<%= simple_form_for @bike do |f| %>
  <%= f.input :name , class: "simp-form-input"%>
  <%= f.input :description, class: "simp-form-input" %>
  <%= f.input :daily_rate, class: "simp-form-input" %>
  <%= f.input :category,
              collection: ['Road Bike', 'Mountain Bike', 'Commuter Bike'],
              class: "simp-form-input" %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :photo, as: :file , class: "simp-form-input"%>
  <%= f.submit "List Bike", class: "btn btn-form-go" %>
<% end %>
