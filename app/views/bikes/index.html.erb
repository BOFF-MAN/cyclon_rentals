<div class="title-container">
  <h1 style="padding: 20px 0px;">All bikes</h1>
  <%= form_tag bikes_path, method: :get do %>
  <div style="margin: 0 auto;" class="search-form-control form-group">
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Type a location" %>
    <%= submit_tag "Search", class: "btn btn-ghost" %>
  </div>
  <% end %>
</div>
<div class="index-container">
<div class="cards-container">
  <% @bikes.each do |bike| %>
    <div class="bike-card">
      <% if bike.photo.key? %>
        <div class="bike-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bike.photo.key %>')"></div>
      <% else %>
        <div class="bike-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://media.istockphoto.com/vectors/city-bike-icon-vector-id1160272603?k=20&m=1160272603&s=612x612&w=0&h=xCYpwK2JjHG4TbzljsdPqMIJ4_F8rkYNqx528FyiWWA=')">
      <% end %>
      <div class="bike-card-infos">
        <div>
          <h2><%= link_to bike.name, bike_path(bike) %> - £<%= bike.daily_rate %>0</h2>
          <p><%= bike.address %></p>
        </div>
        <%# <h2 class="bike-card-pricing">£<%= bike.daily_rate %>
      </div>
    </div>
  <% end %>
</div>
</div>
    <div id="map" class=""
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
