<div class="bike-show-container">
  <div class="row">

    <div class="col-8">
      <div class="show-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @bike.photo.key %>')">
      </div>
      <div class="show-description">
        <h3>About this bike</h3>
        <p><%= @bike.description %></p>
      </div>
      <div class="show-location">
        <h3>Bike Location</h3>
        <p><%= @bike.address %></p>
        <div style="width: auto; height: 500px;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
      <div class="show-reviews">
        <h3>Bike Reviews</h3>
        <%= link_to "Add a review", new_bike_review_path(@bike), class: "btn btn-ghost" %>
        <div class="reviews-container">
          <% @bike.reviews.each do |review| %>
            <div class="review-card">
              <div class="review-content">
                <img src="https://res.cloudinary.com/daunt2sk5/image/upload/v1652816262/avatar_istock_yhmpzg.jpg" class= "avatar">
                <div class="review-card-info">
                  <h3><%= review.user.name %></h3>
                  <p><%= review.content %></p>
                </div>
              </div>
              <div>
                <p><%= review.rating %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-4">
      <h1><%= @bike.name %></h1>
      <div class="show-card-booking">
        <h3>Bike Owner: <%= @bike.user.name %></h3>
        <div class="show-card-pricing">
          <div class="pricing-box">
            <p>Daily</p>
            <p>£<%= @bike.daily_rate %>/day</p>
          </div>
          <div class="pricing-box">
            <p>7+ days</p>
            <p>£<%= @bike.daily_rate * 0.8 %>/day</p>
          </div>
          <div class="pricing-box">
            <p>30+ days</p>
            <p>£<%= @bike.daily_rate * 0.6 %>/day</p>
          </div>
        </div>
        <%= simple_form_for [@bike, @booking] do |f| %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.submit "Book this Bike", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
     <button type="button"><%= link_to "Back to bikes", bikes_path %></button>

  </div>
</div>


